<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.1day1motivation" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>               <!--액션 바의 배경색-->
        <item name="colorAccent">@color/teal_200</item>             <!--강조 색-->
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="actionBarSize">58dp</item>

        <!--actionBar-->
        <item name="android:subtitleTextColor">@color/actionBarSubTitleText</item>
        <!--statusBar-->
        <item name="android:statusBarColor" >@color/primaryDark</item>  <!-- 상태바의 배경색-->
        <item name="android:windowLightStatusBar" >true</item>          <!-- 상태바 아이콘 ture : 검은색 아이콘 -->

        <item name="android:background">?attr/selectableItemBackground</item>

    </style>

    <!--splash theme-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>       <!--상태바 숨김 처리-->
    </style>
</resources>